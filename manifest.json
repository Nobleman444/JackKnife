{
    "manifest_version" : 2,
    "name" : "JackKnife",
    "version" : "0.3",
    
    "description" : "Adds JKIndex and the other JK files to web pages",
    
    "icons" : {
        "48" : "JKInfo/JackKnife-48.png"
    },
    
    "content_scripts" : [{
        "matches" : ["*://*/*"],
        "js" : ["JKAgent.js"],
        "match_about_blank" : true,
        "all_frames" : true,
        "run_at" : "document_start"
    }],
    
    "background" : {
        "scripts" : ["JKIndex.js"]
    }
}